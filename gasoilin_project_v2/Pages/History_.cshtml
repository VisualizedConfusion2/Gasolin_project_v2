@page
@model PrivacyModel
@{
    ViewData["Title"] = "History Page";
}

<!-- Link to the external CSS file -->
<link rel="stylesheet" href="~/css/history.css" />

<!-- Main title of the page, bound to the Title property in the backend model -->
<h1 class="text-center">@Model.Content.Title</h1>

<!-- First section: Title and content bound to Section1Title and Section1Content -->
<h2 class="history-title">@Model.Content.Section1Title</h2>
<p class="history-content">@Model.Content.Section1Content</p>

<!-- Embed first video -->
<div class="video-container">
    <iframe class="video-iframe" src="@Model.Content.Section1VideoUrl" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

<!-- Second section: Title and content bound to Section2Title and Section2Content -->
<h2 class="history-title">@Model.Content.Section2Title</h2>
<p class="history-content">@Model.Content.Section2Content</p>

<!-- Embed second video -->
<div class="video-container">
    <iframe class="video-iframe" src="@Model.Content.Section2VideoUrl" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

<!-- Third section: Title and content bound to Section3Title and Section3Content -->
<h2 class="history-title">@Model.Content.Section3Title</h2>
<p class="history-content">@Model.Content.Section3Content</p>

<!-- Embed third video -->
<div class="video-container">
    <iframe class="video-iframe" src="@Model.Content.Section3VideoUrl" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>