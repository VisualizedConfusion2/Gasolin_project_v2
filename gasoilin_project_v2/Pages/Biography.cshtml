@page
@model BiographyModel
@{
    ViewData["Title"] = "Home page";
}

@for (int i = 0; i < Model.Peoples.Length; i++)
{
    <div style="display: flex; justify-content: center; gap: 1rem;">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="/Image/@Model.Peoples[i].ImagePath" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Model.Peoples[i].Name</h5>
                <p class="card-text">@Model.Peoples[i].Description</p>
            </div>
        </div>
    </div>
}